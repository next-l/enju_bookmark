#col1.row
  #content_list.col-md-9
    h1.title
      = t('page.editing', model: t('activerecord.models.tag'))
    = form_for(@tag, url: tag_path(@tag.name)) do |f|
      = f.error_messages
      .form-group
        = f.label :name
        br
        = f.text_field :name, value: @tag.name
      .form-control
        = f.submit
  #submenu.col-md-3
    ul.list-group
      li.list-group-item
        = link_to t('page.show'), tag_path(@tag.name)
      li.list-group-item
        = link_to t('page.back'), tags_path
